services:
  # Container definition for the devcontainer
  devcontainer:
    build:
      context: .
      args:
        PYTHON_VERSION: ${PYTHON_VERSION:-{{ python_version }}}
      target: dev
    stdin_open: true
    tty: true
    volumes:
      - .:/workspaces/{{ package_slug }}/
{% if use_app %}
  # Container definition for running the production app image
  app:
    build:
      context: .
      target: app
    tty: true
    ports:
      - "8001:8000"
    volumes:
      - .:/workspaces/{{ package_slug }}/
    command: ["serve", "--dev"]
{% endif %}
networks:
  default:
    name: {{ package_slug }}-network
